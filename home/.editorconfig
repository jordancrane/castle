root = true

[*]
end_of_line = LF
charset = utf-8
max_line_length = 80

[*.css]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120
 
[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

[*.py]
indent_style = space
indent_size = 8
trim_trailing_whitespace = true
max_line_length = 120

[*.vim]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.rb]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.yml]
indent_style = space
indent_size = 2
